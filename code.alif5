صنف مخروط:
	نصف_قطر_القاعدة = 0
	ارتفاع = 0
	بي = 3.14	
		  
	
		  	

	دالة تهيئة(ن = 1, ع = 1):
		نصف_قطر_القاعدة += ن
		ارتفاع += ع
				
	دالة مساحة_القاعدة():
		المساحة = 2 * بي * نصف_قطر_القاعدة
		ارجع المساحة

	دالة حجم_المخروط():
		ارجع مخروط.مساحة_القاعدة() * ارتفاع \ 3

مخروط_ألف = مخروط()
مخروط_ألف.تهيئة(9, 25)

اطبع(مخروط_ألف.حجم_المخروط())
