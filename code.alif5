صنف مخروط:
	نق_القاعدة = 0
	الارتفاع = 0
	بي = 3.14

	دالة تهيئة(نق = 1, ع = 1):	
		مخروط.نق_القاعدة = نق
		مخروط.الارتفاع = ع
	
	دالة مساحة_القاعدة():
		م_القاعدة = 2 * مخروط.نق_القاعدة * مخروط.الارتفاع
		ارجع م_القاعدة
	
	دالة حجم_المخروط():
		ارجع مخروط.مساحة_القاعدة() * مخروط.الارتفاع \ 3

مخروط_أ = مخروط()
مخروط_أ.تهيئة(10, 5)
ش = مخروط_أ.حجم_المخروط()
اطبع(ش)

مخروط_ب = مخروط()
مخروط_ب.تهيئة(20, 9)
ص = مخروط_ب.حجم_المخروط()
اطبع(ص)