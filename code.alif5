صنف مخروط:
	نق_القاعدة = 0
	الارتفاع = 0
	بي = 3.14

	دالة تهيئة(نق = 1, ع = 1):	
		مخروط_أ.نق_القاعدة = نق
		مخروط_أ.الارتفاع = ع
	
	دالة مساحة_القاعدة():
		م_القاعدة = 2 * مخروط_أ.نق_القاعدة * مخروط_أ.الارتفاع
		ارجع م_القاعدة
	
	دالة حجم_المخروط():
		ارجع مخروط_أ.مساحة_القاعدة() * مخروط_أ.الارتفاع \ 3

مخروط_أ = مخروط()
مخروط_أ.تهيئة(10, 5)
ش = مخروط_أ.حجم_المخروط()
اطبع(ش)